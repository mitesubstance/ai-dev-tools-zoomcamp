{
  "name": "coding-interview-platform",
  "version": "1.0.0",
  "description": "Real-time collaborative coding interview platform",
  "scripts": {
    "dev": "concurrently -c \"blue,green\" \"npm run dev:client\" \"npm run dev:server\"",
    "dev:client": "cd frontend && npm run dev -- --port 5173",
    "dev:server": "cd backend && uvicorn app.main:app --reload --host 0.0.0.0 --port 8000",
    "test": "npm run test:backend",
    "test:backend": "cd backend && pytest -v",
    "test:client": "cd frontend && npm test",
    "test:integration": "npm run test:integration:run",
    "build": "cd frontend && npm run build",
    "lint": "npm run lint:client && npm run lint:server",
    "lint:client": "cd frontend && npm run lint",
    "lint:server": "cd backend && black . && ruff ."
  },

  "keywords": [
    "collaborative",
    "coding",
    "interview",
    "websocket",
    "codemirror",
    "pyodide"
  ],
  "author": "AI Dev Tools Zoomcamp",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^9.1.0"
  }
}
